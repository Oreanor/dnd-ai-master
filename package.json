{
  "name": "dnd-ai-master",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev\" \"tsx ./server/socket.ts\"",
    "dev:next": "next dev",
    "dev:socket": "tsx ./server/socket.ts",
    "build": "next build",
    "start": "concurrently \"next start\" \"tsx ./server/socket.ts\"",
    "start:next": "next start",
    "start:socket": "tsx ./server/socket.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t dnd-ai-master .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 dnd-ai-master",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up --build -d",
    "docker:compose:down": "docker-compose down",
    "deploy": "./scripts/deploy.sh",
    "deploy:windows": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:logs": "kubectl logs -f deployment/dnd-ai-master -n dnd-ai-master",
    "k8s:scale": "kubectl scale deployment dnd-ai-master --replicas=3 -n dnd-ai-master"
  },
  "dependencies": {
    "cohere-ai": "^7.19.0",
    "dotenv": "^16.4.5",
    "next": "16.0.0",
    "next-auth": "^4.24.11",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.0",
    "typescript": "^5"
  }
}
